<s:SurfaceWindow x:Class="SurfaceApp.SurfaceWindow1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:s="http://schemas.microsoft.com/surface/2008"
    Title="SurfaceApp"
    >
    <Grid>
        <s:TagVisualizer HorizontalAlignment="Left" VerticalAlignment="Top" Height="505" Width="750" VisualizationAdded="TagVisualizer_VisualizationAdded">
            <s:TagVisualizer.Definitions>
                <s:TagVisualizationDefinition Source="PhoneVisualization.xaml"
                                              PhysicalCenterOffsetFromTag="0,2"
                                              LostTagTimeout="10000"
                                              MaxCount="5"
                                              TagRemovedBehavior="Disappear">

                </s:TagVisualizationDefinition>
            </s:TagVisualizer.Definitions>
            <s:ScatterView Name="scatterView" HorizontalAlignment="Left" VerticalAlignment="Top" Height="505" Width="750" ItemsSource="{Binding ImagesInScatterView}">
                <s:ScatterView.ItemTemplate>
                    <DataTemplate>
                        <Image Source="{Binding ImgesInScatterView}" />
                    </DataTemplate>
                </s:ScatterView.ItemTemplate>
            </s:ScatterView>
        </s:TagVisualizer>

    </Grid>
</s:SurfaceWindow>
