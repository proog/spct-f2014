<s:TagVisualization x:Class="SurfaceApp.PhoneVisualization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:s="http://schemas.microsoft.com/surface/2008"
            Visibility="Visible"
            TagRemovedBehavior="Fade"
            LostTagTimeout="3000">
    <Grid>
        <StackPanel>
            <s:SurfaceToggleButton Name="_btnPin" Content="Pin phone" Checked="BtnPin_Checked" Unchecked="BtnPin_Unchecked" />
            <Rectangle Width="200" Height="100" Fill="Pink" AllowDrop="True" s:SurfaceDragDrop.Drop="Rectangle_Drop_1"/>
        </StackPanel>
    </Grid>
</s:TagVisualization>
